{
  "name": "cypress-framework",
  "version": "1.0.0",
  "description": "Cypress E2E test framework with TypeScript and Page Object Model for login page testing",
  "private": true,
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:all-browsers": "npm run cy:run:chrome && npm run cy:run:firefox && npm run cy:run:edge",
    "cy:run:parallel": "cypress-parallel -s cy:run -t 3 -d cypress/e2e",
    "cy:run:parallel:chrome": "cypress-parallel -s cy:run:chrome -t 3 -d cypress/e2e",
    "cy:report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "cy:report:generate": "marge cypress/reports/merged-report.json --reportDir cypress/reports/html --inline",
    "cy:report": "npm run cy:report:merge && npm run cy:report:generate",
    "lint": "eslint 'cypress/**/*.ts'",
    "lint:fix": "eslint 'cypress/**/*.ts' --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "cypress": "~13.17.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-parallel": "^0.14.0",
    "typescript": "~5.7.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.6.0",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
